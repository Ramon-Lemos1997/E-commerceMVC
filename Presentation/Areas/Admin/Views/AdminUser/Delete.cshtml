@using Domain.Entities;
@model ApplicationUser

<div class="pt-5"></div>
<div class="pt-5"></div>
<div class="pt-5"></div>

<div class="d-flex justify-content-center align-items-center"> 
    <form class="p-2 mx-auto col-6 border rounded" asp-controller="AdminUser" asp-action="Delete" method="post">
        @if (ViewBag.SuccessMessage != null && ViewBag.SuccessMessage == true)
        {
            <div class="alert alert-success mt-1 w-auto">
                Seus dados foram atualizados com sucesso!
            </div>
            <meta http-equiv="refresh" content="1;url=/Account/InfoUser">
        }
        <h1 class="text-center pt-5">Tem certeza que deseja excluir este usuário?</h1>
        <div asp-validation-summary="All" class="alert-danger"></div>

        <div class="container">
            <div class="row mt-3">
                <div class="col">
                    <label class="form-label">Nome do usuário </label>
                    <div class="form-control">@(string.IsNullOrEmpty(Model.FirstName) || string.IsNullOrEmpty(Model.Surname) ? "User" : Model.FirstName + " " + Model.Surname) </div>
                    <label class="form-label mt-2">Email do usuário </label>
                    <div class="form-control">@Model.Email</div>
                    <input type="hidden" name="userId" value="@Model.Id" class="form-control" />
                </div>
            </div>
        </div>
   
        <div class="text-center mt-3">
            <a asp-area="Admin" asp-controller="AdminUser" asp-action="Index" class="btn btn-primary m-2"><i class="bi bi-arrow-return-left mx-2"></i>Voltar</a>
            <button type="submit" class="btn btn-danger m-2">Excluir cargo</button>
        </div>
    </form>
</div>

