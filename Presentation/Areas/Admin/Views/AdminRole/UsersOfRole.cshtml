
@using Domain.Entities;
@model IEnumerable<ApplicationUser>

@if (Model.Any())
{
    <div class="container mt-5 mb-5">
        @if (TempData["MessageSuccess"] != null)
        {
            <div class="alert alert-success text-right" role="alert">
                @TempData["MessageSuccess"]
            </div>
        }
        <h1 class="text-center pb-5">Usuários com o privilégio de @ViewBag.Name</h1>
        <div class="table-responsive">
            <table class="MyDataTables table table-white table-hover mt-5">
                <thead>
                    <tr>
                        <th scope="col">Email</th>
                        <th scope="col">Nome</th>
                        <th scope="col">Sobrenome</th>
                        <th scope="col">Gênero</th>
                        <th scope="col">Data de nascimento</th>
                        <th scope="col">Conta confirmada</th>
                        
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.Email</td>
                            <td>@user.FirstName</td>
                            <td>@user.Surname</td>
                            <td>@user.Gender</td>
                            <td>@user.BirthDate</td>
                            <td>@(user.EmailConfirmed ? "Sim": "Não")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <a asp-controller="AdminRole" asp-action="Index" class="btn btn-primary mt-3 mx-2 "><i class="bi bi-arrow-return-left mx-2"></i>Voltar</a>
    </div>
}
else
{
    <div class="pt-5"></div>
    <div class="pt-5"></div>
    <div class="pt-5"></div>
    <h1 class="pt-5 text-center">Não há usuários com este privilégio.</h1>
    <meta http-equiv="refresh" content="4;url=/Admin/AdminRole">
}

