@model IEnumerable<ShoppingCartUser>

<div style="background-color: #eee;">
    <div class="container py-5">
        @foreach (var item in Model)
        {
            <section>
                <div class="row justify-content-center mb-3">
                    <div class="col-md-12 col-xl-10">
                        <div class="card shadow-0 border rounded-3">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-12 col-lg-3 col-xl-3 mb-4 mb-lg-0">
                                        <div class="bg-image hover-zoom ripple rounded ripple-surface">
                                            <img src="~/images/@item.PathImage" class="w-100" />
                                            <a href="#!">
                                                <div class="hover-overlay">
                                                    <div class="mask" style="background-color: rgba(253, 253, 253, 0.15);"></div>
                                                </div>
                                            </a>
                                        </div>
                                    </div>
                                    <div class="col-md-6 col-lg-6 col-xl-6">
                                        <h5>@item.Name</h5>
                                        <div class="d-flex flex-row">
                                            <div class="text-danger mb-1 me-2">
                                                <i class="fa fa-star"></i>
                                                <i class="fa fa-star"></i>
                                                <i class="fa fa-star"></i>
                                                <i class="fa fa-star"></i>
                                            </div>
                                        </div>
                                        <div class="mt-1 mb-0 text-muted small">
                                            Quantidade: @item.Quantity
                                            <div class="mt-3">                                                
                                                <button class="btn btn-danger btn-sm m-1" type="button">
                                                    <span><i class="bi bi-dash"></i></span>
                                                </button>
                                                <button class="btn btn-primary btn-sm m-1" type="button">
                                                    <span><i class="bi bi-plus"></i></span>
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6 col-lg-3 col-xl-3 border-sm-start-none border-start">
                                        <div class="mt-2"></div>
                                        <div class="d-flex flex-row align-items-center mb-1">
                                            <h4 class="mb-1 me-1">R$@item.Price</h4>
                                        </div>
                                        <h6 class="text-success">Frete grátis</h6>
                                        <div class="d-flex flex-column mt-4">
                                            <div class="mt-3"></div>
                                            <div class="mt-5"></div>
                                            <div class="d-flex flex-column mt-4">
                                                <form asp-area="Produtos" asp-controller="Produtos" asp-action="Details" method="get">
                                                    <input type="hidden" name="id" value="@item.ProductId" />
                                                    <button class="btn btn-primary btn-sm w-100" type="submit">Detalhes</button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        }
    </div>
</div>
