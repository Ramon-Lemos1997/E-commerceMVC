@model UpdatePasswordModel

<div class="pt-5"></div>

<h1 class="text-center pt-5">Atualizar Senha</h1>
<div class="container  border rounded mt-5">
    <form class="mt-5" asp-controller="Account" asp-action="UpdatePassword" method="post">
        <div asp-validation-summary="All" class="alert-danger"></div>
        @if (ViewBag.SuccessMessage != null && ViewBag.SuccessMessage == true)
        {
            <div class="alert alert-success mt-1 w-auto">
                A senha foi atualizada com sucesso!
            </div>
            <meta http-equiv="refresh" content="1;url=/Account/MyAccount">
        }
        <div class="form-group">
            <label asp-for="CurrPassword">Senha atual</label>
            <input type="password" class="form-control" id="CurrPassword" asp-for="CurrPassword" required>
        </div>
        <div class="form-group mt-2">
            <label asp-for="NewPassword">Nova Senha</label>
            <input type="password" class="form-control" id="NewPassword" asp-for="NewPassword" required>
        </div>

        <div class="form-group mt-2">
            <label asp-for="ConfirmPassword">Confirmar Nova Senha</label>
            <input type="password" class="form-control" id="ConfirmPassword" asp-for="ConfirmPassword" required>
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
        <a asp-controller="Account" asp-action="InfoUser" class="btn btn-primary mt-3 m-2"><i class="bi bi-arrow-return-left mx-2"></i>Voltar</a>
        <button type="submit" class="btn btn-success mt-3 m-2"><i class=" bi bi-cloud-upload mx-2"></i>Atualizar senha</button>
    </form>
</div>

