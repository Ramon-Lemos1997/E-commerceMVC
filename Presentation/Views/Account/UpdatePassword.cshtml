@model UpdatePasswordModel

<div class="pt-5"></div>

<h1 class="text-center pt-5">Atualizar Senha</h1>
<div class="container  border rounded mt-5">
    <form class="mt-5" asp-controller="Account" asp-action="UpdatePassword" method="post">
        <div asp-validation-summary="ModelOnly" class="alert alert-light text-danger border border-danger rounded mt-2" role="alert"></div>       
        <div class="form-group">
            <label asp-for="CurrPassword"></label>
            <input class="form-control" asp-for="CurrPassword" placeholder="Insira sua senha atual" required>
            <span asp-validation-for="CurrPassword" class="text-danger"></span>
        </div>
        <div class="form-group mt-2">
            <label asp-for="NewPassword"></label>
            <input class="form-control" asp-for="NewPassword" placeholder="Insira a nova senha" required>
            <span asp-validation-for="NewPassword" class="text-danger"></span>
        </div>

        <div class="form-group mt-2">
            <label asp-for="ConfirmPassword"></label>
            <input class="form-control" asp-for="ConfirmPassword" placeholder="Confirme a nova senha" required>
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
        <a asp-controller="Account" asp-action="InfoUser" class="btn btn-primary mt-3 m-2"><i class="bi bi-arrow-return-left mx-2"></i>Voltar</a>
        <button type="submit" class="btn btn-success mt-3 m-2"><i class=" bi bi-cloud-upload mx-2"></i>Atualizar senha</button>
    </form>
</div>


