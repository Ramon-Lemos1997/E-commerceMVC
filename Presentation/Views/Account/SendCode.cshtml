@model EmailModel

<div class="pt-5"></div>

@if (ViewBag.ShowSuccessMessage != null && ViewBag.ShowSuccessMessage == true)
{
    <div class="alert alert-success mt-5 w-auto">
        Foi enviado um link para a redefinição de senha para o email cadastrado.
    </div>
    <meta http-equiv="refresh" content="1;url=/Home/Index">
}
<h1 class="text-center pt-5">Conecte-se</h1>
<div class="container  border rounded mt-5">
    <form  class="mb-3" asp-controller="Account" asp-action="SendCode" method="post">
        <div asp-validation-summary="All" class="alert-danger"></div>
        <div class="form-group mt-3">
            <label class="form-label" asp-for="Email"></label>
            <input asp-for="Email" class="form-control" placeholder="Insira seu email" required />
        </div>
        <button type="submit" class="btn btn-primary mt-3">Enviar Link de Recuperação</button>
    </form>
</div>

