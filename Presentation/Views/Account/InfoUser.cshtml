@model InfoUserModel

@if (Model != null)
{
    <h1 class="text-center pt-5">Detalhes da conta</h1>

    <div class="container  border rounded ">
        <div class="row mt-3">
            <div class="col">
                <label class="form-label" asp-for="Email"></label>
                <input asp-for="Email" class="form-control" disabled />
            </div>
        </div>                     

        <div class="row mt-3">
            <div class="col">
                <label class="form-label" asp-for="FirstName"></label>
                <input asp-for="FirstName" class="form-control" disabled />
            </div>
            <div class="col">
                <label class="form-label" asp-for="Surname"></label>
                <input asp-for="Surname" class="form-control" disabled />
            </div>
        </div>

        <div class="row mt-3 ">
            <div class="col">
                <label class="form-label" asp-for="BirthDate"></label>
                <input asp-for="BirthDate" class="form-control" disabled />
            </div>
            <div class="col">
                <label class="form-label" asp-for="Gender"></label>
                <input asp-for="Gender" class="form-control" disabled />
            </div>          
        </div>

        <div class="row mt-3 ">
            <div class="col">
                <label class="form-label" asp-for="Nation"></label>
                <input asp-for="Nation" class="form-control" disabled />
            </div>
            <div class="col">
                <label class="form-label" asp-for="State"></label>
                <input asp-for="State" class="form-control" disabled />
            </div>
        </div>

        <div class="row mt-3 ">
            <div class="col">
                <label class="form-label" asp-for="City"></label>
                <input asp-for=City class="form-control" disabled />
            </div>
            <div class="col">
                <label class="form-label" asp-for="Neighborhood"></label>
                <input asp-for="Neighborhood" class="form-control" disabled />
            </div>          
        </div>

        <div class="row mt-3 ">       
            <div class="col">
                <label class="form-label" asp-for="Street"></label>
                <input asp-for="Street" class="form-control" disabled />
            </div>
            <div class="col">
                <label class="form-label" asp-for="HouseNumber"></label>
                <input asp-for="HouseNumber" class="form-control" disabled />
            </div>
        </div>

        <div class="row mt-3 mb-3">
            <div class="col">
                <label class="form-label" asp-for="ZipCode"></label>
                <input asp-for="ZipCode" class="form-control" disabled />
            </div>
            <div class="col">
                <label class="form-label" asp-for="PhoneNumber"></label>
                <input asp-for="PhoneNumber" class="form-control" disabled />
            </div>
        </div>                          
    </div>

    <div class="mt-3 mb-3">
        <a asp-controller="Account" asp-action="MyAccount" class="btn btn-primary mx-2 m-2"><i class="bi bi-arrow-return-left mx-2"></i>Voltar</a>
        <a asp-controller="Account" asp-action="UpdateInfoUser" class="btn btn-warning mx-2 m-2"><i class="bi bi-pen mx-2"></i>Atualizar dados</a>
        <a asp-controller="Account" asp-action="Editar" class="btn btn-warning mx-2 m-2"><i class="bi bi-pen mx-2"></i>Alterar senha</a>
    </div>
}
   
else
{
    <h1 class="text-center justify-content-center">Usuário não encontrado.</h1>
}

