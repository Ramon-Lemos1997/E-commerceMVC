@using Contracts.Enums;
@model Contracts.Models.DataUserModel

<div class="d-flex align-items-center justify-content-center">
    <form class="p-5 mx-auto" asp-controller="Account" asp-action="DataUser" method="post">
        @* <div asp-validation-summary="All" class="text-danger"></div> *@
        <div class="form-group">
            <label asp-for="FirstName"></label>
            <input asp-for="FirstName" class="form-control  mt-1" required />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>

        <div class="form-group mt-3">
            <label asp-for="Surname"></label>
            <input asp-for="Surname" class="form-control mt-1" required/>
            <span asp-validation-for="Surname" class="text-danger"></span>
        </div>
   
        <div class="form-group mt-3">
            <label asp-for="Gender"></label>
            <div>
                @foreach (var gender in Enum.GetValues(typeof(GenderEnum)))
                {
                    <label class="p-2" >
                        <input type="radio" class="form-check-input"  asp-for="Gender" value="@gender" required />
                        @gender
                    </label>
                }
            </div>
            <span asp-validation-for="Gender" class="text-danger"></span>
        </div>


        <div class="form-group mt-3">
            <label asp-for="Street"></label>
            <input asp-for="Street" class="form-control mt-1" required/>
            <span asp-validation-for="Street" class="text-danger"></span>
        </div>

        <div class="form-group mt-3">
            <label asp-for="Neighborhood"></label>
            <input asp-for="Neighborhood" class="form-control mt-1" required />
            <span asp-validation-for="Neighborhood" class="text-danger"></span>
        </div>

        <div class="form-group mt-3">
            <label asp-for="ZipCode"></label>
            <input asp-for="ZipCode" class="form-control mt-1" required />
            <span asp-validation-for="ZipCode" class="text-danger"></span>
        </div>

        <div class="form-group mt-3">
            <label asp-for="PhoneNumber"></label>
            <input asp-for="PhoneNumber" class="form-control mt-1" required  />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>

        <div class="form-group mt-3">
            <label asp-for="BirthDate"></label>
            <input asp-for="BirthDate" class="d-flex rounded mt-1" required/>
            <span asp-validation-for="BirthDate" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary mt-3">Atualizar conta</button>
    </form>
</div>